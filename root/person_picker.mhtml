<%args>
$id_prefix
</%args>

<div class="curs-person-picker">

<input class="curs-person-picker-input" id="<% $id_prefix %>-input" name="<% $id_prefix %>-input" size="30" />
<input class="curs-person-picker-person-id" id="<% $id_prefix %>-person-id" name="<% $id_prefix %>-person-id" type="hidden"/>

<script>
  var curs_people_autocomplete_list = [
% for my $person_data (@people_data) {
    {
      label: "<% $person_data->name() . ' <' . $person_data->email_address . '>' %>",
      name: "<% $person_data->name() %>",
      value: "<% $person_data->person_id() %>",
    },
% }
  ];
</script>
</div>

<%init>
my $schema = $c->schema('track');
my @people_data = $schema->resultset('Person')->all();
</%init>
