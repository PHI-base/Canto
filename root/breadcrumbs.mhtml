<div id="breadcrumbs">
  <div class="breadcrumbs-link">
    <a id="breadcrumbs-home-link"
       href="<% $instance_top_uri %>" title="Go to <% $instance_text %>">
      <% $instance_text %>
    </a>
  </div>
</div>

<%init>
my $config = $c->config();
my $instance_text = $config->{database_name} . ' ' . $config->{name};
my $instance_top_uri = $c->uri_for('/');
</%init>
