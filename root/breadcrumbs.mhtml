<div id="breadcrumbs">
% if (defined $home_path) {
  <a href="<% $home_path %>" title="Go to the home page">
    <img src="<% $c->uri_for('/static/images/left_triangle.png') %>">Home page</a>
% }
</div>


<%init>
my $current_path = $c->req->uri()->path();
my $home_path = undef;

if ($current_path ne '/') {
  $home_path = $c->uri_for('/');
}
</%init>
