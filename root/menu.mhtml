<div id="menu">
  <ul>
    <li>
% if ($c->user_exists()) {
  <div class="networkaddress"> <% $c->user()->networkaddress() %> </div>
% }
    </li>
    <li>
% if ($c->user_exists()) {
      <a href="<% $c->uri_for('/logout') %>">Logout</a>
% } else {
%   if ($current_path !~ m:/account:) {
      <a href="<% $c->uri_for('/account', { return_path => $return_path_uri }
      ) %>">
        Log in
      </a>
%   } else {
      <span>Log in</span>
%   }
% }
    </li>
    <li>
      <a href="<% $c->uri_for('/help') %>">Help</a>
    </li>
  </ul>
</div>

<%init>
my $current_path = $c->req->uri()->path();
my $return_path_uri = 
  $c->uri_for($current_path, $c->req()->params());
</%init>
