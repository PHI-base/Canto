<%args>
@stats_table
</%args>

<div>
  <table class="list">
    <thead>
      <tr>
        <th rowspan="2">
          Year
        </th>
        <th style="text-align: center" colspan="3">
          Publications curated
        </th>
        <th style="text-align: center" colspan="2">
          Annotations
        </th>
      </tr>
      <tr>
        <th>
          Total
        </th>
        <th>
          Curator
        </th>
        <th>
          Community
        </th>
        <th>
          Curator
        </th>
        <th>
          Community
        </th>
      </tr>
    </thead>
% for my $row (@stats_table) {
    <tr>
      <td>
        <% shift @$row %>
      </td>
      <td>
        <% $row->[0] + $row->[1] %>
      </td>
%   for my $column (@$row) {
      <td><% $column %></td>
%   }
    </tr>
% }
  </table>
</div>
