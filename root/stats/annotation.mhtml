<div class="col-sm-6 col-md-6">
  <table class="list">
    <thead>
      <tr>
        <th>
          Publication year
        </th>
        <th>
          GO annotations
        </th>
        <th>
          Phenotypes
        </th>
        <th>
          Protein modifications
        </th>
        <th>
          Genetic interactions
        </th>
        <th>
          Physical interactions
        </th>
        <th>
          Other
        </th>
      </tr>
    </thead>
% for my $row (@cumulative_annotation_types_by_year) {
    <tr>
%   for my $elem (@$row) {
