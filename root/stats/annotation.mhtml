  <table class="list">
    <thead>
      <tr>
        <th>
          Publication year
        </th>
        <th>
          Avg. genes per pub.
        </th>
        <th>
          Avg. annotations per pub.
        </th>
      </tr>
    </thead>
% for my $row (@per_pub_5_year_stats) {
    <tr>
% my $range_start = shift @$row;
% my $range_end = $range_start + 4;
