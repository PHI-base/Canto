% if ($c->user_exists()) {
  <a href="<% $c->uri_for('/logout') %>">Logout</a>
% } else {
%   if ($local_path !~ m:account|login:) {
  <a href="<% $c->uri_for('/account', { return_path => $return_path_uri }) %>">
    Log in
  </a>
%   } else {
  <span>Log in</span>
%   }
% }
<%init>
my $local_path = $c->req()->path();
my $return_path_uri = $c->req()->uri();
</%init>
