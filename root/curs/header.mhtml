<div id="heading">
  <div id="banner">
    <a href="<% $root_path %>">
      <div id="logo">
        <img src="<% $c->uri_for('/static/images/site_logo.png') %>"/>
        CURS <span class="app_version"><% $c->stash()->{app_version} %></span>
      </div>
      <div id="text"> <% $c->config->{long_name} %> </div>
    </a>
  </div>
  <& menu.mhtml, submitter_email => $c->stash()->{submitter_email} &>

% if (defined $pub_title) {
  <div class="pub-title">
    <% $pub->title() %> &nbsp; (<span class="pubmedid">PMID:<% $pub->pubmedid() %></span>)
  </div>
% }

  <div class="clearall"></div>

</div>


<%flags>
inherit => undef
</%flags>

<%init>
my $root_path = $c->stash()->{curs_root_path};
my $pub = $c->stash()->{pub};
my $pub_title = undef;
if (defined $pub) {
  $pub_title = $pub->title();
}
</%init>
