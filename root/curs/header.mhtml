<div id="heading">
  <a href="<% $root_path %>">
    <div class="logo">
      <img src="<% $c->uri_for('/static/images/site_logo.png') %>"/>
      CURS <span class="app_version"><% $c->config()->{app_version} %></span>
    </div>
  </a>

  <div class="text"> <% $c->config->{long_name} %> </div>

  <& menu.mhtml, submitter_email => $c->stash()->{submitter_email} &>

  <div class="clearall"></div>

</div>


<%flags>
inherit => undef
</%flags>

<%init>
my $root_path = $c->stash()->{curs_root_uri};
my $pub = $c->stash()->{pub};
my $pubid = undef;
if (defined $pub) {
  $pubid = $pub->uniquename();
}
</%init>
