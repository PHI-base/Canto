<%args>
$curs_root_uri
$pub
$genotype
@annotation_type_list
</%args>

<div id="curs-annotation-actions">
<div class="curs-box">
  <div class="curs-box-title">
Action
  </div>
  <div class="curs-box-body">
  <ul class="annotation-start">
% for my $annotation_type (@types_to_show) {
%   my $annotation_type_name = $annotation_type->{name};
%   my $title = $annotation_type->{help_text} // '';
%   my $action_path = $curs_root_uri . '/feature/genotype/annotate/' . $genotype_id;
%     $action_path .= "/choose_term/$annotation_type_name";
%   my $type_display_name = $annotation_type->{display_name};
    <li>
%   if (!$annotation_type->{disabled}) {
      <a title="<% $title %>" href="<% $action_path %>">
%   }
      <span class="annotation-type">
Add a new <% $type_display_name %> for this genotype ...
      </span>
%   if (!$annotation_type->{disabled}) {
      </a>
%   }
    </li>
% }
  </ul>
  </div>
</div>
</div>

<div id="curs-genotype-details" class="curs-box">
  <div class="curs-box-title">
Alleles
  </div>
  <div class="curs-box-body">
    <div class="curs-allele-list">
% for my $allele ($genotype->alleles()) {
<% $allele->display_name() %>
%   if ($allele->expression()) {
-     <i><% $allele->expression() %></i>
%   }
% if (!$read_only_curs) {
 - <a href="<% $start_path . '/feature/gene/view/' . $allele->gene()->gene_id() %>">
     <span>
       <% $_proxy_gene->($allele->gene())->display_name() %>
     </span>
   </a>
% }
   <br/>
% }
    </div>
  </div>
</div>

<div id="curs-genotype-details" class="curs-box">
  <div class="curs-box-title">
Details
  </div>
  <div class="curs-box-body">
    <table class="curs-definition-table">
      <tbody>
        <tr>
          <td class="title">
Identifier
          </td>
          <td>
<% $genotype->identifier() %>
          </td>
        </tr>
        <tr>
          <td class="title">
Name
          </td>
          <td>
<% $genotype->name() // '[not named]' %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<annotation-table-list genotype-identifier="<% $genotype_identifier %>"></annotation-table-list>

<div class="clearall"/>

<button type="button" id="curs-finish-genotype" class="btn btn-primary
curs-back-button"><% $finish_text %></button>

<div id="curs-annotation-tables" class="sect">
% for my $annotation_type (@types_to_show) {
<& current_annotation_view.mhtml,
   annotation_type => $annotation_type,
   curs_root_uri => $curs_root_uri,
   pub => $pub,
   target => $genotype &>
% }

</div>

<%init>
my $genotype_id = $genotype->genotype_id();
my $genotype_identifier = $genotype->identifier();

my $st = $c->stash();

my $genotype_count = $st->{genotype_count};
my $finish_text;
if ($genotype_count > 1) {
  $finish_text = 'Change genotype';
} else {
  $finish_text = 'Back to summary';
}

my @types_to_show = grep {
  $_->{feature_type} eq 'genotype'
} @annotation_type_list;

my $start_path = $c->stash()->{curs_root_uri};
my $read_only_curs = $c->stash()->{read_only_curs};

my $_proxy_gene = sub {
  return Canto::Curs::GeneProxy->new(config => $c->config(),
                                     cursdb_gene => shift);

};
</%init>
