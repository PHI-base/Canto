<%args>
$curs_root_uri
$pub
$read_only_curs => 0
</%args>

<div ng-controller="GenotypeManageCtrl"
     id="curs-genotype-manage" class="genotype-list">
  <div>
  <div class="row">
% if (!$read_only_curs) {
    <div class="curs-top-help">
Add view and edit genotypes
    </div>
    <div class="col-sm-6 col-md-6">
        <div class="feature-list-action">
          <a class="btn btn-primary" href="<% $start_path . '/feature/genotype/add' %>">Add a genotype ...</a>
        </div>
    </div>
  </div>
% }
  <div class="row">
    <div class="col-sm-12 col-md-12">
      <div class="ng-cloak">
        <div ng-show="data.waitingForServer">
          <img ng-src="{{app_static_path + '/images/spinner.gif'}}"></img>
        </div>

        <div ng-hide="data.waitingForServer">
        <div ng-if="data.genotypes.length != 0">
          <div class="curs-genotype-list-instructions">
Mouse over genotypes for more actions
          </div>

          <genotype-list-view genotype-list="data.genotypes"
                              navigate-on-click="false"
                              initial-selected-genotype-id="{{data.selectedGenotypeIdFromPath}}">
          </genotype-list-view>
        </div>
        <div ng-show="data.genotypes.length == 0">
No genotypes in this session.  Try adding one.

        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-5 col-md-5">
        <button type="button" id="curs-finish-genotype" class="btn btn-primary curs-back-button"><% $finish_text %></button>
      </div>
    </div>
    </div>
  </div>
  </div>
  </div>
</div>


<%init>
my $start_path = $c->stash()->{curs_root_uri};

my $finish_text = '<- Back to summary';
</%init>
</div>
