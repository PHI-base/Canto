<%args>
$title => 'Genes'
$pub
</%args>

<div class="gene-list-edit">
  <form name="gene-edit" method="get" action="<% $edit_path %>">
% if (@gene_hashes) {
  <table class="list">

    <thead>
      <tr>
%     for my $col_name (@col_names) {
        <th>
          <% $col_name %>
        </th>
%     }
        <th>
          &nbsp;
        </th>
      </tr>
    </thead>

%   for my $gene (@gene_hashes) {
    <tr>
%     for my $col_name (@col_names) {
      <td>
        <% $gene->{$col_name} %>
      </td>
%     }
      <td>
        <input type="checkbox"
               name="gene-select"
               value='<% $gene->{gene_id} %>' />
      </td>
    </tr>
%   }
  </table>
  <input type="submit" name="submit" value="Delete selected"/>
  <input type="submit" name="continue" value="Continue"/>
% } else {
  <div class="no-genes-message">
    [No genes]
  </div>
% }

<div class="upload-genes-link">
  <a href="<% $upload_path %>">Add more genes from <% $pub->uniquename() %> ...</a>
</div>
</form>
</div>

<%init>
use PomCur::Curs;

my $schema = $c->stash()->{schema};
my @all_genes =
  PomCur::Controller::Curs::get_ordered_gene_rs($schema, 'primary_name')->all();

my @search_terms = ();

if (defined $c->stash()->{search_terms}) {
  @search_terms = @{$c->stash()->{search_terms}};
}

my %search_terms = ();
@search_terms{@search_terms} = @search_terms;

$c->stash()->{search_terms_hash} = \%search_terms;

sub _search_highlight
{
  my $identifier = shift;

  return '' if !defined $identifier;

  my %search_terms = %{$c->stash()->{search_terms_hash}};

  if (exists $search_terms{$identifier}) {
    return '<span class="curs-matched-search-term">' . $identifier . '</span>';
  } else {
    return $identifier;
  }
}

my $total_annotation_count = 0;

my @gene_hashes = map {
     my $gene = $_;
     my $synonyms_string =
       join (',', map { _search_highlight($_->identifier()) } $gene->genesynonyms());
     my $direct_annotation_count = $gene->direct_annotations()->count();
     $total_annotation_count += $direct_annotation_count;
     my $annotations_text;
     if ($direct_annotation_count > 0) {
       $annotations_text = "$direct_annotation_count";
     } else {
       $annotations_text = "none";
     }
     {
       'Systematic identifier' => _search_highlight($gene->primary_identifier()),
       Name => _search_highlight($gene->primary_name()),
       Product => $gene->product(),
       Synonyms => $synonyms_string,
       Annotations => $annotations_text,
       gene_id => $gene->gene_id(),
     }
   } @all_genes;

my @col_names = ("Systematic identifier", "Name", "Synonyms", "Product");

if ($total_annotation_count > 0) {
  push @col_names, "Annotations";
}

my $start_path = $c->stash()->{curs_root_uri};
my $upload_path = "$start_path/gene_upload";
my $edit_path = "$start_path/edit_genes";
</%init>
