<%args>
$schema
$title => 'Genes'
$pub
@search_terms => ()
$curs_root_uri
$multi_organism_mode
</%args>

<div id="curs-gene-list-edit" class="curs-box">
  <div class="curs-box-title">
<% $title %>
  </div>
  <div class="curs-box-body">
  
  <form name="gene-edit" method="get" action="<% $edit_path %>">
% if (@gene_hashes) {
  <table class="list">

    <thead>
      <tr>
%     for my $col_name (@col_names) {
        <th>
          <% $col_name %>
        </th>
%     }
        <th>
          &nbsp;
        </th>
      </tr>
    </thead>

%   for my $gene (@gene_hashes) {
    <tr>
%     for my $col_name (@col_names) {
      <td>
        <% $gene->{$col_name} |n %>
      </td>
%     }
      <td>
        <input type="checkbox"
               name="gene-select"
               value='<% $gene->{gene_id} %>' />
      </td>
    </tr>
%   }
  </table>
  <div class="submit">
    <input type="submit" name="continue" value="Continue"/>
  </div>
  <div class="submit">
    <input type="submit" name="submit" value="Remove selected"/>
  </div>
% } else {
  <div class="no-genes-message">
    [No genes]
  </div>
% }

<div class="upload-genes-link">
  <a href="<% $upload_path %>">Add more genes from <% $pub->uniquename() %> ...</a>
</div>
</form>
</div>
</div>

<%init>
use PomCur::Curs;

my @all_genes =
  PomCur::Controller::Curs->get_ordered_gene_rs($schema, 'primary_name')->all();

my %search_terms = ();
@search_terms{@search_terms} = @search_terms;

sub _search_highlight
{
  my $search_terms = shift;
  my $identifier = shift;

  return '' if !defined $identifier;

  HTML::Mason::Escapes::basic_html_escape(\$identifier);

  if (exists $search_terms->{$identifier}) {
    return '<span class="curs-matched-search-term">' . $identifier . '</span>';
  } else {
    return $identifier;
  }
}

my @gene_hashes = map {
     my $gene = $_;
     my $synonyms_string =
       join (',', map { _search_highlight(\%search_terms, $_->identifier()) } $gene->genesynonyms());
     my $hash = {
       'Systematic identifier' => _search_highlight(\%search_terms, $gene->primary_identifier()),
       Name => _search_highlight(\%search_terms, $gene->primary_name()),
       Product => $gene->product(),
       Synonyms => $synonyms_string,
       gene_id => $gene->gene_id(),
     };
     if ($multi_organism_mode) {
       $hash->{Organism} = $gene->organism()->full_name();
     }
     $hash
   } @all_genes;

my @col_names = ("Systematic identifier", "Name", "Synonyms", "Product");

if ($multi_organism_mode) {
  push @col_names, "Organism";
}

my $upload_path = "$curs_root_uri/gene_upload";
my $edit_path = "$curs_root_uri/edit_genes";
</%init>
