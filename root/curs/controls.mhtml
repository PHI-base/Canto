<div class="curs-controls">
  <ul>
    <li class="<% $home_class %>">
      <a href="<% $start_path . '/home' %>">Start</a>
    </li>
% for my $module_name (@module_names) {
%   my $module_path = $start_path . '/' . $module_name;
%   my $class = $module_name eq $current_component ? 'current-module' : 'not-current-module';
    <li class="<% $class %>">
      <a href="<% $module_path %>">
        <% PomCur::Curs::Util::module_display_name($module_name) %>
      </a>
    </li>
% }
  </ul>
</div>

<%init>
use PomCur::Curs::Util;

my @module_names = @{$c->stash()->{module_names}};
my $start_path = $c->stash()->{curs_root_path};
my $current_component = $c->stash()->{component};

my $home_class = '';

if ($current_component eq 'home') {
  $home_class = 'current-module';
}

</%init>

