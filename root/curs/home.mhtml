<%args>
$curs_key
$state
$curs_root_path
</%args>

% if ($state eq 'done') {
  <p>All genes annotated</p>
% } else {
  <p>Choose an action: </p>
  <ul class="annotation-start">
% for my $annotation_type_name (@annotation_type_names) {
%   my $action_path = $curs_root_path . '/' . $annotation_type_name;
    <li>
      <a href="<% $action_path %>">
        <% PomCur::Curs::Util::module_display_name($annotation_type_name) %>
      </a>
    </li>
% }
  </ul>
% }


<%init>
use PomCur::Curs::Util;

my @annotation_type_names = @{$c->stash()->{annotation_type_names}};
</%init>
