<div id="breadcrumbs">
% if ($is_admin) {
  <div id="breadcrumbs-home-link" class="breadcrumbs-link">
    <a href="<% $home_path %>" title="Go to the home page">
      Home
    </a>
% }
  <div id="breadcrumbs-gene-summary-link" class="breadcrumbs-link">
% if (defined $gene) {
    <a href="<% $curs_root_uri %>" title="Go to the home page">
      <% $pub->uniquename() %> summary
    </a>
%   my $gene_display_name = $gene->display_name();
    <div id="breadcrumbs-gene-link" class="breadcrumbs-link">
%   if ($current_path_uri !~ m:/gene/:) {
      <a href="<% $gene_url %>" title="Go to the home page">
%   }
      Gene: <% $gene_display_name %>
%   if ($current_path_uri !~ m:/gene/:) {
      </a>
%   }
    </div>
% } else {
  <% $pub->uniquename() %> summary
% }
  </div>
% if ($is_admin) {
  </div>
% }
</div>

<%init>
my $current_path_uri = $c->stash()->{current_path_uri};
my $gene = $c->stash()->{gene_proxy};
my $pub = $c->stash()->{pub};
my $curs_root_uri = $c->stash()->{curs_root_uri};
my $gene_url;

if (defined $gene) {
  $gene_url = $curs_root_uri . '/gene/' . $gene->gene_id();
}

my $home_path = $c->uri_for('/');

my $is_admin = $c->stash()->{is_admin_user};
</%init>
