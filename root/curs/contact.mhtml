<div id="curs-contact-curators-dialog" title="Message for curator"
     style="display:none">
  <form id="curs-contact-curators-form" action="" method="post">
    <input type="hidden" id="curs-contact-curators-page"
           value="<% $c->stash()->{current_path_uri} %>"/>
    <table>
      <tr>
        <td> Subject: </td>
        <td> <input id="ferret-suggest-name" name="ferret-suggest-name"/> </td>
      </tr>
      <tr>
        <td> Message: </td>
        <td>
          <textarea name="ferret-suggest-definition" cols="60" rows="10"></textarea>
        </td>
      </tr>
    </table>
    <input id="ferret-suggest-submit" name="ferret-submit" type="submit"
           value="Submit suggestion" class="button"/>
  </form>
</div>

