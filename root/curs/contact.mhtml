<div id="curs-contact-dialog" title="Message for curator"
     style="display:none">
  <form id="curs-contact-form" action="" method="post">
    <input type="hidden" id="curs-contact-page"
           value="<% $c->stash()->{current_path_uri} %>"/>
    <table>
      <tr>
        <td> Subject: </td>
        <td> <input id="curs-contact-subject" name="curs-contact-suggest-name"/> </td>
      </tr>
      <tr>
        <td> Message: </td>
        <td>
          <textarea name="curs-contact-subject" cols="60" rows="10"></textarea>
        </td>
      </tr>
    </table>
    <input id="curs-contact-submit" name="curs-contact-submit" type="submit"
           value="Send" class="button dialog-submit"/>
  </form>
</div>

<a id="curs-contact-link" href="#">Questions? Contact curators ...</a>
