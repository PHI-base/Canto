<%args>
$curs_root_uri
$pub
$gene_proxy
@annotation_type_list
</%args>

<div id="curs-annotation-actions">
<div class="curs-box">
  <div class="curs-box-title">
Choose curation type for <% $gene_proxy->display_name() %>:
  </div>
  <div class="curs-box-body">
  <ul class="annotation-start">
% for my $annotation_type (@annotation_type_list) {
%   my $annotation_type_name = $annotation_type->{name};
%   my $action_path = $curs_root_uri . '/annotation/edit/' .
%                     $gene_id . '/' . $annotation_type_name;
    <li>
%   if (!$annotation_type->{disabled}) {
      <a href="<% $action_path %>">
%   }
      <span class="annotation-type">
<% ucfirst $annotation_type->{display_name} %>
      </span>
%   if (!$annotation_type->{disabled}) {
      </a>
%   }
    </li>
% }
  </ul>
  </div>
</div>
</div>

<div id="curs-gene-details" class="curs-box">
  <div class="curs-box-title">
Details for <% $gene_proxy->display_name() %>
  </div>
  <div class="curs-box-body">
<& /linkouts.mhtml, object => $gene_proxy, context => 'gene' &>
    <table class="curs-definition-table">
      <tr>
        <td class="title">Identifier</td>
        <td><% $gene_proxy->primary_identifier() %></td>
      </tr>
      <tr>
        <td class="title">Name</td>
        <td><% $gene_name %></td>
      </tr>
      <tr>
        <td class="title">Product</td>
        <td><% $gene_proxy->product() %></td>
      </tr>
% if ($c->stash()->{multi_organism_mode}) {
      <tr>
        <td class="title">Organism</td>
        <td><% $gene_proxy->organism()->full_name() %></td>
      </tr>
% } 
    </table>
  </div>
</div>

<div class="clearall"/>

<button type="button" id="curs-finish-gene" class="curs-finish-button">Change gene</button>

<div id="curs-annotation-tables" class="sect">
% for my $annotation_type (@annotation_type_list) {
<& current_annotation_view.mhtml,
   annotation_type => $annotation_type,
   curs_root_uri => $curs_root_uri,
   pub => $pub,
   gene_proxy => $gene_proxy &>
% }

</div>

<%init>
my $gene_id = $gene_proxy->gene_id();
my $gene_name = $gene_proxy->{primary_name} // '';
</%init>
