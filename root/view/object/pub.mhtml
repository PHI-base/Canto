<%args>
$object
</%args>

<&| /view/object/object_top.mhtml, object => $object &>
<div class="sect abstract">
<span class="sect-title disclosed-title"><a href="#"> Abstract </a> </span>
<div class="sect-content">
  <% $abstract %>
</div>
</div>
% if ($c->user_exists()) {

<div>
  <a href="<% $c->uri_for('/new/object/curs',
                          { 'pub.pub_id' => $object->pub_id(),
                            'object.curs_key' => PomCur::Curs::make_curs_key(),
                            model => $c->req()->param('model') }) %>">
    Create a new curation session for this publication ...
  </a>
</div>
% }
</&>

<%init>
use PomCur::Curs;

my $abstract = $object->abstract() || '[Abstract not available]';
</%init>
