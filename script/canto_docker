#!/bin/bash -

if [ ! -d data ]
then
   echo 'missing "data" directory - exiting'
   exit 1
fi

if [ ! -d canto ]
then
   echo 'missing "canto" directory - exiting'
   exit 1
fi

if [ ! -d import_export ]
then
   echo 'missing "import_export" directory - exiting'
   exit 1
fi

EXTRA_ARGS=""

if [ $(uname) = Linux ]
then
    EXTRA_ARGS="--net=host --env=OWLTOOLS_MEMORY"
fi

INTERACTIVE_ARGS="-ti"

if [ $1 = '--non-interactive' ]
then
    shift
    INTERACTIVE_ARGS=""
fi

CANTO_DOCKER_RUN_ARGS="$EXTRA_ARGS --name canto --rm $INTERACTIVE_ARGS --mount type=bind,source=$(pwd)/data,target=/data --mount type=bind,source=$(pwd)/import_export,target=/import_export --mount type=bind,source=$(pwd)/canto,target=/canto -w=/canto pombase/canto-base:v11"

cd canto

exec docker run $CANTO_DOCKER_RUN_ARGS "$@"
